  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const generateButton = document.getElementById('generate-button');
      const messagePreview = document.getElementById('message-preview');
      const linkOnly = document.getElementById('link-only');
      const statsLink = document.getElementById('stats-link');
      const addFriendButton = document.getElementById('add-friend');
      const friendEmailsContainer = document.getElementById('friend-emails');
      const copyLinkButton = document.getElementById('copy-link-button');
      const copyStatsButton = document.getElementById('copy-stats-button');
      let friendCount = 1;

      // Generate a unique identifier for this user session
      function generateUserId() {
        let userId = localStorage.getItem('userId');
        if (!userId) {
          userId = 'user_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
          localStorage.setItem('userId', userId);
        }
        return userId;
      }

      const userId = generateUserId();

      // Store URLs in a predefined list
      const urls = [
        "https://gift.jpc.today/ref1",
        "https://gift.jpc.today/ref2",
        "https://gift.jpc.today/ref3",
        "https://gift.jpc.today/ref4",
        "https://gift.jpc.today/ref5",
        "https://gift.jpc.today/ref6",
        "https://gift.jpc.today/ref7",
        "https://gift.jpc.today/ref8",
        "https://gift.jpc.today/ref9",
        "https://gift.jpc.today/ref10",
          "https://gift.jpc.today/ref11",
        "https://gift.jpc.today/ref12",
        "https://gift.jpc.today/ref13",
        "https://gift.jpc.today/ref14",
        "https://gift.jpc.today/ref15",
        "https://gift.jpc.today/ref16",
        "https://gift.jpc.today/ref17",
        "https://gift.jpc.today/ref18",
        "https://gift.jpc.today/ref19",
        "https://gift.jpc.today/ref20",
          "https://gift.jpc.today/ref21",
        "https://gift.jpc.today/ref22",
        "https://gift.jpc.today/ref23",
        "https://gift.jpc.today/ref24",
        "https://gift.jpc.today/ref25",
        "https://gift.jpc.today/ref26",
        "https://gift.jpc.today/ref27",
        "https://gift.jpc.today/ref28",
        "https://gift.jpc.today/ref29",
        "https://gift.jpc.today/ref30",
          "https://gift.jpc.today/ref31",
        "https://gift.jpc.today/ref32",
        "https://gift.jpc.today/ref33",
        "https://gift.jpc.today/ref34",
        "https://gift.jpc.today/ref35",
        "https://gift.jpc.today/ref36",
        "https://gift.jpc.today/ref37",
        "https://gift.jpc.today/ref38",
        "https://gift.jpc.today/ref39",
        "https://gift.jpc.today/ref40",
          "https://gift.jpc.today/ref41",
        "https://gift.jpc.today/ref42",
        "https://gift.jpc.today/ref43",
        "https://gift.jpc.today/ref44",
        "https://gift.jpc.today/ref45",
        "https://gift.jpc.today/ref46",
        "https://gift.jpc.today/ref47",
        "https://gift.jpc.today/ref48",
        "https://gift.jpc.today/ref49",
        "https://gift.jpc.today/ref50",
          "https://gift.jpc.today/ref51",
        "https://gift.jpc.today/ref52",
        "https://gift.jpc.today/ref53",
        "https://gift.jpc.today/ref54",
        "https://gift.jpc.today/ref55",
        "https://gift.jpc.today/ref56",
        "https://gift.jpc.today/ref57",
        "https://gift.jpc.today/ref58",
        "https://gift.jpc.today/ref59",
        "https://gift.jpc.today/ref60"
      
    
        
      ];

      // Assign URL based on user ID (store the URL once assigned)
      function assignUrl() {
        let assignedUrl = localStorage.getItem(`url_${userId}`);

        if (!assignedUrl) {
          const randomIndex = Math.floor(Math.random() * urls.length);
          assignedUrl = urls[randomIndex];
          localStorage.setItem(`url_${userId}`, assignedUrl);
        }

        return assignedUrl;
      }

      // Add new friend input field
      addFriendButton.addEventListener('click', function() {
        friendCount++;
        const newFriendGroup = document.createElement('div');
        newFriendGroup.className = 'form-group friend-group';
        newFriendGroup.innerHTML = `
          <label for="email${friendCount}">Friend ${friendCount} Email</label>
          <input type="email" id="email${friendCount}" placeholder="Enter email address">
          <button type="button" class="remove-friend">
            <i class="fas fa-times"></i>
          </button>
        `;
        friendEmailsContainer.appendChild(newFriendGroup);
        
        // Add event listener to the new remove button
        newFriendGroup.querySelector('.remove-friend').addEventListener('click', function() {
          newFriendGroup.remove();
        });
      });

      // Remove friend input field
      document.addEventListener('click', function(e) {
        if (e.target.closest('.remove-friend')) {
          e.target.closest('.friend-group').remove();
        }
      });

      // Copy link functionality
      copyLinkButton.addEventListener('click', function() {
        linkOnly.select();
        document.execCommand('copy');
        
        // Show feedback
        const feedback = document.createElement('div');
        feedback.className = 'copy-feedback';
        feedback.innerHTML = '<i class="fas fa-check"></i> Copied!';
        linkOnly.parentNode.appendChild(feedback);
        
        setTimeout(() => {
          feedback.remove();
        }, 2000);
      });

      // Copy stats functionality
      copyStatsButton.addEventListener('click', function() {
        statsLink.select();
        document.execCommand('copy');
        
        // Show feedback
        const feedback = document.createElement('div');
        feedback.className = 'copy-feedback';
        feedback.innerHTML = '<i class="fas fa-check"></i> Copied!';
        statsLink.parentNode.appendChild(feedback);
        
        setTimeout(() => {
          feedback.remove();
        }, 2000);
      });

      // Generate preview button functionality
generateButton.addEventListener('click', function() {
  const name = document.getElementById('name').value || 'Your Friend';
  
  // Collect all friend emails
  const friendEmails = [];
  document.querySelectorAll('#friend-emails input[type="email"]').forEach(input => {
    if (input.value.trim() !== '') {
      friendEmails.push(input.value);
    }
  });

  const assignedUrl = assignUrl();
  const personalizedUrl = `${assignedUrl}?name=${encodeURIComponent(name)}&ref=${userId}`;
  const statsUrl = `${assignedUrl}.stats?ref=${userId}`;

  // Populate the message preview box
  messagePreview.value = `Hey! This is ${name} thought you might be interested in this. It's a $100 Gift Card!\n\n${personalizedUrl}`;

  // Populate the link-only box
  linkOnly.value = personalizedUrl;

  // Populate the stats link box
  statsLink.value = statsUrl;

  // Show the share buttons
  document.querySelectorAll('.share-button').forEach(button => {
    button.classList.remove('hidden');
  });

  // Show the copy buttons
  copyLinkButton.classList.remove('hidden');
  copyStatsButton.classList.remove('hidden');

  // Configure the share buttons
  document.getElementById("sms-button").onclick = () => {
    window.location.href = `sms:?body=Hey I was thinking of you! Here is a $100 Gift Card! ${personalizedUrl}`;
  };
  
  document.getElementById("mailto-button").onclick = () => {
    const subject = encodeURIComponent("I was thinking of you!");
    const body = encodeURIComponent(`Thought you might like this! It's a $100 Gift Card! ${personalizedUrl}`);
    
    // Create mailto link with recipients, subject, and body
    let mailtoLink = `mailto:${friendEmails.join(',')}?subject=${subject}&body=${body}`;
    
    window.location.href = mailtoLink;
  };
  
  document.getElementById("whatsapp-button").onclick = () => {
    window.location.href = `https://wa.me/?text=I was thinking of you! Thought yo might want this $100 Gift Card! ${personalizedUrl}`;
  };
  
  document.getElementById("facebook-button").onclick = () => {
    const shareUrl = encodeURIComponent(personalizedUrl);
    
    // Use m.facebook.com for mobile devices
    if (/iPhone|iPad|iPod|Android/i.test(navigator.userAgent)) {
      window.open(`https://m.facebook.com/sharer.php?u=${shareUrl}`, "_blank");
    } else {
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`, "_blank");
    }
  };
});

      // Stats button functionality
      document.getElementById("stats-button").addEventListener("click", () => {
        const assignedUrl = assignUrl();
        window.location.href = `${assignedUrl}.stats?ref=${userId}`;
      });
    });
  </script>
</body>
