  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const generateButton = document.getElementById('generate-button');
      const messagePreview = document.getElementById('message-preview');
      const linkOnly = document.getElementById('link-only');
      const statsLink = document.getElementById('stats-link');
      const addFriendButton = document.getElementById('add-friend');
      const friendEmailsContainer = document.getElementById('friend-emails');
      const copyLinkButton = document.getElementById('copy-link-button');
      const copyStatsButton = document.getElementById('copy-stats-button');
      let friendCount = 1;

      // Generate a unique identifier for this user session
      function generateUserId() {
        let userId = localStorage.getItem('userId');
        if (!userId) {
          userId = 'user_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
          localStorage.setItem('userId', userId);
        }
        return userId;
      }

      const userId = generateUserId();

      // Store URLs in a predefined list
      const urls = [
        "https://gift.jpc.today/100-1",
        "https://gift.jpc.today/100-2",
        "https://gift.jpc.today/100-3",
        "https://gift.jpc.today/100-4",
        "https://gift.jpc.today/100-5",
        "https://gift.jpc.today/100-6",
        "https://gift.jpc.today/100-7",
        "https://gift.jpc.today/100-8",
        "https://gift.jpc.today/100-9",
        "https://gift.jpc.today/100-10",
        "https://gift.jpc.today/100-11",
        "https://gift.jpc.today/100-12",
        "https://gift.jpc.today/100-13",
        "https://gift.jpc.today/100-14",
        "https://gift.jpc.today/100-15",
        "https://gift.jpc.today/100-16",
        "https://gift.jpc.today/100-17",
        "https://gift.jpc.today/100-18",
        "https://gift.jpc.today/100-19",
        "https://gift.jpc.today/100-20",
        "https://gift.jpc.today/100-21",
        "https://gift.jpc.today/100-22",
        "https://gift.jpc.today/100-23",
        "https://gift.jpc.today/100-24",
        "https://gift.jpc.today/100-25",
        "https://gift.jpc.today/100-26",
        "https://gift.jpc.today/100-27",
        "https://gift.jpc.today/100-28",
        "https://gift.jpc.today/100-29",
        "https://gift.jpc.today/100-30",
        "https://gift.jpc.today/100-31",
        "https://gift.jpc.today/100-32",
        "https://gift.jpc.today/100-33",
        "https://gift.jpc.today/100-34",
        "https://gift.jpc.today/100-35",
        "https://gift.jpc.today/100-36",
        "https://gift.jpc.today/100-37",
        "https://gift.jpc.today/100-38",
        "https://gift.jpc.today/100-39",
        "https://gift.jpc.today/100-40",
