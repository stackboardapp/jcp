        "https://gift.jpc.today/100-55",
        "https://gift.jpc.today/100-56",
        "https://gift.jpc.today/100-57",
        "https://gift.jpc.today/100-58",
        "https://gift.jpc.today/100-59",
        "https://gift.jpc.today/100-60",
        
      ];

      // Assign URL based on user ID (store the URL once assigned)
      function assignUrl() {
        let assignedUrl = localStorage.getItem(`url_${userId}`);

        if (!assignedUrl) {
          const randomIndex = Math.floor(Math.random() * urls.length);
          assignedUrl = urls[randomIndex];
          localStorage.setItem(`url_${userId}`, assignedUrl);
        }

        return assignedUrl;
      }

      // Add new friend input field
      addFriendButton.addEventListener('click', function() {
        friendCount++;
        const newFriendGroup = document.createElement('div');
        newFriendGroup.className = 'form-group friend-group';
        newFriendGroup.innerHTML = `
          <label for="email${friendCount}">Friend ${friendCount} Email</label>
          <input type="email" id="email${friendCount}" placeholder="Enter email address">
          <button type="button" class="remove-friend">
            <i class="fas fa-times"></i>
          </button>
        `;
        friendEmailsContainer.appendChild(newFriendGroup);
        
        // Add event listener to the new remove button
        newFriendGroup.querySelector('.remove-friend').addEventListener('click', function() {
          newFriendGroup.remove();
        });
      });

      // Remove friend input field
      document.addEventListener('click', function(e) {
        if (e.target.closest('.remove-friend')) {
          e.target.closest('.friend-group').remove();
        }
      });

      // Copy link functionality
      copyLinkButton.addEventListener('click', function() {
        linkOnly.select();
        document.execCommand('copy');
        
        // Show feedback
        const feedback = document.createElement('div');
        feedback.className = 'copy-feedback';
        feedback.innerHTML = '<i class="fas fa-check"></i> Copied!';
        linkOnly.parentNode.appendChild(feedback);
        
        setTimeout(() => {
          feedback.remove();
        }, 2000);
      });

      // Copy stats functionality
      copyStatsButton.addEventListener('click', function() {
        statsLink.select();
        document.execCommand('copy');
        
        // Show feedback
        const feedback = document.createElement('div');
        feedback.className = 'copy-feedback';
        feedback.innerHTML = '<i class="fas fa-check"></i> Copied!';
        statsLink.parentNode.appendChild(feedback);
        
        setTimeout(() => {
          feedback.remove();
        }, 2000);
      });

      // Generate preview button functionality
generateButton.addEventListener('click', function() {
  const name = document.getElementById('name').value || 'Your Friend';
  
  // Collect all friend emails
  const friendEmails = [];
  document.querySelectorAll('#friend-emails input[type="email"]').forEach(input => {
    if (input.value.trim() !== '') {
      friendEmails.push(input.value);
    }
  });

  const assignedUrl = assignUrl();
  const personalizedUrl = `${assignedUrl}?name=${encodeURIComponent(name)}&ref=${userId}`;
  const statsUrl = `${assignedUrl}.stats?ref=${userId}`;

  // Populate the message preview box
  messagePreview.value = `Hi! This is ${name}, I thought you might be interested in this. It's a $100 GIFT CARD!\n\n${personalizedUrl}`;

  // Populate the link-only box
  linkOnly.value = personalizedUrl;

  // Populate the stats link box
  statsLink.value = statsUrl;

  // Show the share buttons
  document.querySelectorAll('.share-button').forEach(button => {
    button.classList.remove('hidden');
  });

  // Show the copy buttons
  copyLinkButton.classList.remove('hidden');
  copyStatsButton.classList.remove('hidden');

  // Configure the share buttons
  document.getElementById("sms-button").onclick = () => {
    window.location.href = `sms:?body=Thought you would like this, Here's a $100 Gift Card for you! ${personalizedUrl}`;
  };
  
  document.getElementById("mailto-button").onclick = () => {
    const subject = encodeURIComponent("I'm sending you a Gift Card");
    const body = encodeURIComponent(`Thought you might be interested, here is a $100 Gift Card! ${personalizedUrl}`);
    
    // Create mailto link with recipients, subject, and body
    let mailtoLink = `mailto:${friendEmails.join(',')}?subject=${subject}&body=${body}`;
    
    window.location.href = mailtoLink;
  };
  
  document.getElementById("whatsapp-button").onclick = () => {
    window.location.href = `https://wa.me/?text=Thought you would like this, Here is a $100 Gift Card for you! ${personalizedUrl}`;
  };
  
  document.getElementById("facebook-button").onclick = () => {
    const shareUrl = encodeURIComponent(personalizedUrl);
    
    // Use m.facebook.com for mobile devices
    if (/iPhone|iPad|iPod|Android/i.test(navigator.userAgent)) {
      window.open(`https://m.facebook.com/sharer.php?u=${shareUrl}`, "_blank");
    } else {
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`, "_blank");
    }
  };
});

      // Stats button functionality
      document.getElementById("stats-button").addEventListener("click", () => {
        const assignedUrl = assignUrl();
        window.location.href = `${assignedUrl}.stats?ref=${userId}`;
      });
    });
  </script>
  
   <script>
        document.getElementById('saveBtn').addEventListener('click', function() {
            const button = this;
            const message = document.getElementById('message');
            
            // Get the image source
            const imgSrc = document.querySelector('.photo').src;
            
            // Create a temporary anchor element to trigger download
            const link = document.createElement('a');
            link.href = imgSrc;
            link.download = 'Johnson painting company gift voucher.jpg'; // Set the filename for download
            
            // Append to the document, click, and remove
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Show feedback to the user
            button.classList.add('saved');
            button.innerHTML = `
                <svg class="save-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Saved!
            `;
            
            message.classList.add('show');
            
            // Hide message after 3 seconds
            setTimeout(() => {
                message.classList.remove('show');
            }, 3000);
        });
    </script>
